<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:layout_constraint="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNhanVienActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etMaNhanVien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mã nhân Viên"
                android:textSize="19sp"/>

            <EditText
                android:id="@+id/etHoTen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Họ Tên"
                android:textSize="19sp"/>

            <EditText
                android:id="@+id/etChucVu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Chức vụ"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/etHeSoLuong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hệ số lương"
                android:textSize="19sp"/>

            <EditText
                android:id="@+id/etLuongCoBan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lương cơ bảb"
                android:textSize="19sp"/>

            <EditText
                android:id="@+id/etPhuCap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phụ cấp chức vụ"
                android:textSize="19sp"/>

            <Button
                android:id="@+id/btnAddNhanVien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm Nhân Viên" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
